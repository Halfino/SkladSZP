<Window x:Class="Sklad.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklad"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="380" ResizeMode="NoResize">
    <Grid Margin="0,0,15,11">
        <Label Content="Uživatelské jméno:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0" />
        <TextBox Name="UserNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="150,20,0,0"/>

        <Label Content="Heslo:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox Name="PasswordBox" KeyDown="PasswordBox_KeyDown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="150,70,0,0"/>

        <Button Content="Přihlásit" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="0,0,0,20" Click="LoginButton_Click"/>
    </Grid>
</Window>
